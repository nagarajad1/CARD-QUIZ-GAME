<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FifthQuestion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--    TextView for Question -->
        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:padding="30dp"
            android:text="Q5. Which of the following are components of an Android application?"
            android:textSize="16sp"
            android:typeface="normal" />

        <!-- CheckBox for Answers-->
        <CheckBox
            android:id="@+id/checkbox_controller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controller" />

        <CheckBox
            android:id="@+id/checkbox_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Services" />

        <CheckBox
            android:id="@+id/checkbox_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broadcast Receivers" />

        <CheckBox
            android:id="@+id/checkbox_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content Providers" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked2"
            android:text="Finish" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>